@model IEnumerable<FitnessApplication.Models.Equipment>

@{
    ViewData["Title"] = "Equipment Manager";
}

<h1>Equipment Manager</h1>

<p>
    <a asp-action="Create" class="mt-2 btn btn-info">Create New</a>
</p>

<div class="d-flex flex-wrap ">
    @foreach (var item in Model)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text">
                    <strong>Name of Item:</strong> @Html.DisplayFor(modelItem => item.Name) <br />
                    <strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)
                </p>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-primary w-100" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info w-100 mx-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>


<div class="mt-3">
    <a asp-action="Create" class="btn btn-success w-100">Create New</a>
</div>
