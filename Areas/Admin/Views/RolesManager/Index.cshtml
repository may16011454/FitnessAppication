@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles Manager Page";
}

<div class="text-center">
    <h1>Roles Manager</h1>

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-danger mx-2">@ViewData["Message"]</div>
    }

    <form method="post" asp-action="AddRole" asp-controller="RolesManager">
        <div class="input-group">
            <input name="roleName" class="form-control w-25" />
            <span class="input-group-btn">
                <button type="submit" class="btn-info btn">Add New Role</button>
            </span>
        </div>
    </form>
</div>

<div class="d-flex flex-wrap mt-4">
    @foreach (var role in Model)
    {
        <div class="card m-2">
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
                <p class="card-text">
                    <strong>ID:</strong> @role.Id<br />
                </p>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-danger w-100" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

